{% extends "baseLayouts/baseUserFiles.html.jinja" %}

{% block titleBlock %}User Files{% endblock %}

{% block headerBlock %}{{ userName }} Files{% endblock %}
{% block mainContentBlock %}
<div class="w3-bar-block">
    {% for file in fileList %}
    <a href="/files/{{ file.id }}" class="w3-button w3-bar-item ws-grey">{{ file.name }}</a>
    {% else %}
    <p>No files yet. Try uploading one!</p>
    {% endfor %}
</div>
{% endblock %}

{% block filePageButtonBlock %}
<form method="post" enctype="multipart/form-data">
    <input type="file" name="file">
    <input type="submit" class="w3-button w3-theme-l1" value="Upload File">
</form>
{% endblock %}

{{ super() }}